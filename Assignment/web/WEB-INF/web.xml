<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.login.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>timetable</servlet-name>
        <servlet-class>controller.timetable.TimetableLecturer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.login.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>takeattendence</servlet-name>
        <servlet-class>controller.attendence.takeattendence</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>controller.login.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Score</servlet-name>
        <servlet-class>controller.score.Grade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentGrade</servlet-name>
        <servlet-class>controller.score.StudentGrade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewGrade</servlet-name>
        <servlet-class>controller.score.ViewGrade</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTablestudent</servlet-name>
        <servlet-class>controller.timetable.TimeTablestudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addStudent</servlet-name>
        <servlet-class>controller.Student.addStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteStudent</servlet-name>
        <servlet-class>controller.Student.deleteStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addScore</servlet-name>
        <servlet-class>controller.score.addScore</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>timetable</servlet-name>
        <url-pattern>/ScheduleOfWeek</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>takeattendence</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Score</servlet-name>
        <url-pattern>/Grade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentGrade</servlet-name>
        <url-pattern>/StudentGrade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewGrade</servlet-name>
        <url-pattern>/ViewGrade</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTablestudent</servlet-name>
        <url-pattern>/ScheduleOfWeekStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addStudent</servlet-name>
        <url-pattern>/addstudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteStudent</servlet-name>
        <url-pattern>/deletestudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addScore</servlet-name>
        <url-pattern>/addscore</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
